<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile...</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
</head>
<style>
body {font-family: Arial, Helvetica, sans-serif; background-color: #f8f9fa ;}

.modal1 {
  display: none;
  position: fixed; 
  z-index: 1; 
  padding-top: 100px; 
  left: 0;
  top: 0;
  width: 100%; 
  height: 100%;
  overflow: auto; 
  background-color: rgb(0,0,0) ;
  background-color: rgba(0,0,0,0.4); 
}

.modal-content1 {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 40%;
}

.close1 {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close1:hover,
.close1:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}
.p-ll{
  
    padding: 6rem!important;
}
.container{
  text-align: center;
  padding-bottom: 10px;
}
.rounded-circle{
  display: inline-block;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;

}


</style>
<body>
  <%- include('navbar1')%> 
  <main class="container">
    <div class="bg-light p-ll rounded">
 
  <% for(let i=0;i<results.length;i++) { %>

    <%if(results[i].id==id){%>
      <section class="bg-light">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 mb-4 mb-sm-5">
              <div class="card card-style1 border-0">
                <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                  <div class="row align-items-center">
                    <div class="col-lg-6 mb-4 mb-lg-0">
                      <img class="rounded-circle"
                        src="http://res.cloudinary.com/dhyspabbw/image/upload/v1664453612/<%=results[i].pic%>" alt="..."
                        width="100%">
                    </div>
                    <div class="col-lg-6 px-xl-10">
                      <div class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded">
                        <h3 class="h2 text-white mb-0">
                          <%=results[i].name%>
                        </h3>
                      </div>
                      <ul class="list-unstyled mb-1-9">
                        <li class="mb-2 mb-xl-3 display-28"><span
                            class="display-26 text-secondary me-2 font-weight-600">Email:</span>
                          <%=results[i].email%>
                        </li>
                        <li class="mb-2 mb-xl-3 display-28"><span
                            class="display-26 text-secondary me-2 font-weight-600">Posts:</span>
                          <%=results[i].count%>
                        </li>
                        <li class="mb-2 mb-xl-3 display-28"><span
                          class="display-26 text-secondary me-2 font-weight-600">DOB:</span>
                       
                         
                            <%=new Date(results[i].DOB).toDateString().slice(3,15)%>
                        
                      </li>
                      </ul>
                      <div class="text-center d-grid gap-2 d-md-block">
                        <%if(id==userId){%>
                          <a href="/edit/<%=results[i].id%>"><button type="button"
                              class="btn btn-success btn-lg">Update</button></a>
                         
                            <button type="button" id="myBtn"
                              class="btn btn-danger btn-lg">Delete</button>

                              <div id="myModal" class="modal1">
                                

                                <div class="modal-content1">
                                  <span class="close1">&times;</span>

                                  <p>Are you sure you want to delete your account..</p>
                                  <a href="/profile/delete/<%=results[i].id%>">
                                    <button type="button" id="myBtn"
                                      class="btn btn-danger ">Delete</button></a>
                                  <button id="closebtn" class="btn btn-secondary">Cancel</button>
                                </div>
                              
                              </div>
                              <script>

                              var modal = document.getElementById("myModal");

                              var btn = document.getElementById("myBtn");

                              var span = document.getElementsByClassName("close1")[0];
                              var closeBtn=document.getElementById("closebtn");

                              btn.onclick = function() {
                                modal.style.display = "block";
                              }

                              span.onclick = function() {
                                modal.style.display = "none";
                              }
                              closeBtn.onclick = function(){
                                modal.style.display = "none";
                              }
                                window.onclick = function(event) {
                                if (event.target == modal) {
                                  modal.style.display = "none";
                                }
                              }
                              </script>
                          <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="bg-light">
        <div class="container">
          <div class="tab-pane fade show active" id="tab-2">
            <div class="row g-4">
              <%for(let j=0;j<post.length;j++) {%>
                <%if(post[j].id==id) {%>
                  <div class="col-sm-6 col-lg-4">
                    <a href="/post/<%=post[j].postid%>">
                    <div class="card h-100">
                      <img class="card-img-top"
                        src="http://res.cloudinary.com/dhyspabbw/image/upload/v1664453612/<%=post[j].image%>">
                      <div class="card-body">

                        <a class="text-body">
                          <%=post[j].title%>
                        </a>

                      </div>
                    </div></a>
                  </div>
                  <% } %>
                    <% } %>
            </div>
          </div>
        </div>
      </section>
      <% } %>

        <% } %>
    </div></main>
      
</body>

</html>