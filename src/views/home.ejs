  width: 40px;
  border-radius: 100px;
  cursor: pointer;
  
}
.fir-image-figure {
  margin: 0;
  display: flex;
  align-items: center;
  /* margin-bottom: 40px; */
  position: relative;
  text-decoration: none;
  padding: 10px;
}

.fir-image-figure .caption, .fir-image-figure figcaption {
  padding-left: 15px;
}

html.wf-active .fir-image-figure .fig-author-figure-title {
  font-family: var(--fir-font-header);
  font-size: 16px;

}
.fir-imageover {
  position: relative;
  display: flex;
}

.notifications__item__avatar {
  width: 75px;
  height: 75px;
  overflow: hidden;
  margin-right: 20px;

